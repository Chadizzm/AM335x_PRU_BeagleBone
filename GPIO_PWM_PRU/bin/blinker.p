
#define GPIO1 0x4804c000
#define GPIO_CLEARDATAOUT 0x190
#define GPIO_SETDATAOUT 0x194

LBCO r0, C4, 4, 4
CLR r0, r0, 4
SBCO r0, C4, 4, 4

MOV r5, 250

LSL r6, r5, 20
LSL r5, r5, 19

PWM_ON:
    MOV r2, 7<<22
    MOV r3, GPIO1 | GPIO_SETDATAOUT

    SBBO r2, r3, 0, 4

    MOV r4, 0

DELAY:
    ADD r4, r4, 1
    QBEQ PWM_ON, r4, r6
    QBNE DELAY, r4, r5

PWM_OFF:
    MOV r2, 7<<22
    MOV r3, GPIO1 | GPIO_CLEARDATAOUT
    SBBO r2, r3, 0, 4
    QBA DELAY
